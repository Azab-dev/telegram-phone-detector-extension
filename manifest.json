{
  "manifest_version": 3,
  "name": "Telegram Phone Detector",
  "version": "1.0",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://web.telegram.org/*",
        "https://web.telegram.org/k/*"
      ],
      "js": ["content.js"]
    }
  ]
}
